{
  "compilerOptions": {
    "outDir": "./dist",     
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": [
      "reflect-metadata"
    ]
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}